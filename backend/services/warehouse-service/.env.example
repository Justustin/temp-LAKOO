# =============================================================================
# WAREHOUSE SERVICE CONFIGURATION
# =============================================================================

# Server
PORT=3012
NODE_ENV=development

# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/warehouse_db?schema=public"

# Authentication
# Secret key that API Gateway uses to sign requests
GATEWAY_SECRET_KEY=your-gateway-secret-key-here
# Secret key for internal service-to-service calls
INTERNAL_API_KEY=your-internal-api-key-here

# Stock Reservation
# How long to hold a reservation before auto-expiring (hours)
RESERVATION_EXPIRY_HOURS=24

# Inter-Service URLs
ORDER_SERVICE_URL=http://localhost:3006
PAYMENT_SERVICE_URL=http://localhost:3007
NOTIFICATION_SERVICE_URL=http://localhost:3008
LOGISTICS_SERVICE_URL=http://localhost:3009
