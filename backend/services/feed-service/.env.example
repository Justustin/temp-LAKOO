# =============================================================================
# Feed Service Environment Variables
# =============================================================================

# Server
PORT=3018
NODE_ENV=development

# Database (Neon PostgreSQL)
FEED_DATABASE_URL=postgresql://neondb_owner:xxx@ep-xxx.ap-southeast-1.aws.neon.tech/feed_db?sslmode=require

# Security - Gateway Authentication
GATEWAY_SECRET_KEY=your-gateway-secret-key-here
SERVICE_SECRET=your-service-secret-for-hmac-auth

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Service URLs (for inter-service communication)
CONTENT_SERVICE_URL=http://localhost:3017
PRODUCT_SERVICE_URL=http://localhost:3002
NOTIFICATION_SERVICE_URL=http://localhost:3008

# Feed Configuration
FEED_PAGE_SIZE=20
FEED_MAX_AGE_DAYS=30

# Trending Configuration
TRENDING_WINDOW_HOURS=24
TRENDING_COMPUTE_INTERVAL_MINUTES=60

# Background Jobs
ENABLE_BACKGROUND_JOBS=true

# Rate Limiting (optional)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
