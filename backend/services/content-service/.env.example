# =============================================================================
# Content Service Environment Variables
# =============================================================================

# Server
PORT=3017
NODE_ENV=development

# Database (Neon PostgreSQL)
CONTENT_DATABASE_URL=postgresql://neondb_owner:xxx@ep-xxx.ap-southeast-1.aws.neon.tech/content_db?sslmode=require

# Security - Gateway Authentication
GATEWAY_SECRET_KEY=your-gateway-secret-key-here
SERVICE_SECRET=your-service-secret-for-hmac-auth

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Service URLs (for inter-service communication)
PRODUCT_SERVICE_URL=http://localhost:3002
FEED_SERVICE_URL=http://localhost:3018
NOTIFICATION_SERVICE_URL=http://localhost:3008

# AWS S3 (for media uploads - optional for local dev)
AWS_REGION=ap-southeast-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=lakoo-content

# Rate Limiting (optional)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
