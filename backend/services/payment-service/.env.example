# ========================================
# PAYMENT SERVICE ENVIRONMENT VARIABLES
# ========================================

# Application
NODE_ENV=development
PORT=3007
SERVICE_NAME=payment-service

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5437/payment_db?schema=public

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6387

# Kafka (for event messaging)
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=payment-service
KAFKA_CONSUMER_GROUP=payment-service-group

# ========================================
# SERVICE URLS (Microservices Communication)
# ========================================
AUTH_SERVICE_URL=http://localhost:3001
ORDER_SERVICE_URL=http://localhost:3005
WAREHOUSE_SERVICE_URL=http://localhost:3011
NOTIFICATION_SERVICE_URL=http://localhost:3009
WALLET_SERVICE_URL=http://localhost:3008

# ========================================
# XENDIT PAYMENT GATEWAY
# ========================================
XENDIT_SECRET_KEY=xnd_development_xxxxx
XENDIT_PUBLIC_KEY=xnd_public_development_xxxxx
XENDIT_WEBHOOK_TOKEN=your-webhook-verification-token
XENDIT_CALLBACK_URL=https://your-domain.com/api/payments/webhook

# Payment URLs (redirect after payment)
PAYMENT_SUCCESS_URL=https://your-domain.com/payment/success
PAYMENT_FAILURE_URL=https://your-domain.com/payment/failed

# ========================================
# SECURITY
# ========================================
# Internal service-to-service authentication
INTERNAL_SERVICE_KEY=your-internal-service-key-here

# JWT (if validating tokens locally)
JWT_SECRET=your-jwt-secret-here

# ========================================
# EMAIL CONFIGURATION
# ========================================
PLACEHOLDER_EMAIL_DOMAIN=example.com

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=debug
LOG_FORMAT=json

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# CRON JOBS
# ========================================
# Enable/disable scheduled jobs
ENABLE_SETTLEMENT_JOB=true
ENABLE_EXPIRED_PAYMENT_JOB=true
ENABLE_RECONCILIATION_JOB=true

# Job schedules (cron format)
SETTLEMENT_JOB_SCHEDULE=0 2 * * *
EXPIRED_PAYMENT_JOB_SCHEDULE=*/15 * * * *
RECONCILIATION_JOB_SCHEDULE=0 3 * * *
